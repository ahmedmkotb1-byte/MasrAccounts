<Window x:Class="MasrAccounts.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MasrAccounts.Views"
        Title="الصفحة الرئيسية - أحمد حسين لحسابات الفراولة"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="مرحبًا بك في النظام" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 20"/>
            
            <Button Content="إدارة العملاء" Click="OpenClients_Click" Margin="0 5"/>
            <Button Content="إدارة الأصناف" Click="OpenProducts_Click" Margin="0 5"/>
            <Button Content="إنشاء فاتورة جديدة" Click="OpenInvoice_Click" Margin="0 5"/>
            <Button Content="سجل الفواتير" Click="OpenInvoices_Click" Margin="0 5"/>
            <Button Content="الإعدادات" Click="OpenSettings_Click" Margin="0 5"/>
            <Button Content="حول البرنامج" Click="OpenAbout_Click" Margin="0 5"/>
            <Button Content="خروج" Click="ExitApp_Click" Background="DarkRed" Foreground="White" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
