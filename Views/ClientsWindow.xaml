<Window x:Class="MasrAccounts.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="العملاء" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="اسم العميل"/>
            <TextBox x:Name="ClientNameBox" Margin="0 5"/>

            <Button Content="إضافة عميل" Click="AddClient_Click" Margin="0 5"/>
            <Button Content="تعديل العميل المحدد" Click="EditClient_Click" Margin="0 5"/>
            <Button Content="حذف العميل المحدد" Click="DeleteClient_Click" Margin="0 5"/>

            <TextBlock Text="بحث عن عميل" Margin="10 10 0 0"/>
            <TextBox x:Name="SearchBox" Margin="0 5" TextChanged="SearchBox_TextChanged"/>

            <ListBox x:Name="ClientsList" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
