<Window x:Class="MasrAccounts.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="معاينة طباعة الفاتورة" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel x:Name="InvoicePanel">
            <TextBlock Text="فاتورة البيع" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0 10"/>
            <TextBlock x:Name="ClientText" FontSize="14" Margin="0 5"/>
            <TextBlock x:Name="ProductText" FontSize="14" Margin="0 5"/>
            <TextBlock x:Name="WeightText" FontSize="14" Margin="0 5"/>
            <TextBlock x:Name="PriceText" FontSize="14" Margin="0 5"/>
            <TextBlock x:Name="TotalText" FontSize="14" Margin="0 5"/>
            <TextBlock x:Name="DateText" FontSize="14" Margin="0 10"/>
            <Button Content="طباعة" Width="100" HorizontalAlignment="Center" Click="Print_Click"/>
        </StackPanel>
    </Grid>
</Window>
