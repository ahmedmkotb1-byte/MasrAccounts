<Window x:Class="MasrAccounts.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل الدخول" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="اسم المستخدم"/>
            <TextBox x:Name="UsernameBox" Margin="0 5"/>

            <TextBlock Text="كلمة المرور"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 5"/>

            <TextBlock Text="مفتاح التفعيل"/>
            <TextBox x:Name="LicenseBox" Margin="0 5"/>

            <Button Content="تسجيل الدخول" Click="Login_Click" Margin="0 15"/>
        </StackPanel>
    </Grid>
</Window>
